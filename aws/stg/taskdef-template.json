{
    "executionRoleArn": "arn:aws:iam::AWS_ACCOUNT_ID:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "LaravelContainerWeb",
            "image": "<IMAGE_NAME_WEB>",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "dependsOn": [
                {
                    "containerName": "LaravelContainerPHP",
                    "condition": "START"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "secretOptions": null,
                "options": {
                    "awslogs-group": "/ecs/laravel/task/web",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "secrets": [{
                "name": "environment_variable_name",
                "valueFrom": "<SECRET_MANAGER>"
            }],
            "essential": true,
            "memoryReservation": 128
        },
        {
            "name": "LaravelContainerPHP",
            "image": "<IMAGE_NAME_APP>",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/laravel/task/app",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "portMappings": [
                {
                    "hostPort": 9000,
                    "protocol": "tcp",
                    "containerPort": 9000
                }
            ],
            "cpu": 0,
            "memoryReservation": 256,
            "secrets": [
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "valueFrom": "<SECRET_MANAGER>"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "valueFrom": "<SECRET_MANAGER>"
                },
                {
                    "name": "DB_SLAVE_HOST",
                    "valueFrom": "<SECRET_MANAGER>"
                },
                {
                    "name": "DB_MASTER_HOST",
                    "valueFrom": "<SECRET_MANAGER>"
                },
                {
                    "name": "DB_USERNAME",
                    "valueFrom": "<SECRET_MANAGER>"
                },
                {
                    "name": "DB_PASSWORD",
                    "valueFrom": "<SECRET_MANAGER>"
                },
                {
                    "name": "DB_DATABASE",
                    "valueFrom": "<SECRET_MANAGER>"
                }
            ]
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "family": "laravel-Task"
}
